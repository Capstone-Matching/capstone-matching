<html>
<head>
  <title>Admin Landing Page</title>
</head>
<body>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Back to Main Page", root_path, class: "btn btn-danger custom-maroon-button ml-3", id: "back-button" %>
    <button class="btn btn-danger custom-maroon-button" id="dark-mode-toggle">Toggle Dark Mode</button>
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div class="d-flex justify-content-center align-items-center">
      <h1>Welcome, Admin!</h1>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Professors", profLanding_path, class: "btn btn-danger custom-maroon-button m-4", id: "button-1" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Projects", profLanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-2" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "View Class Results", profLanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Sections", profLanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Score Weights", profLanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Lock/Unlock Forms", profLanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Database", profLanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
  </div>
</body>