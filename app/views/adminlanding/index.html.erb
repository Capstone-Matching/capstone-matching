<html>
<head>
  <title>Admin Landing Page</title>
</head>
<body>
  <%= render 'shared/notification' %>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-primary m-3", id: "logout-button" %>
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div>
      <% if @current_user %>
        <h1>Welcome, <%= @first_name %> <%= @last_name %>!</h1>
      <% else %>
        <h1>Welcome, Admin!</h1>
      <% end %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Professors/Admins", manageprof_path, class: "btn btn-danger custom-maroon-button custom-button m-4", id: "button-1" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Students", managestudents_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-1" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Projects", projects_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-2" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "View Match Results", results_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Score Weights", changeweights_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Courses", manageCourses_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Submit Project Preferences", prof_projects_ranking_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "View Professor Project Preferences", viewProfProjectPreferences_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Configuration", configuration_path, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= button_to "Export Database", dump_database_path, method: :post, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
  </div>
</body>