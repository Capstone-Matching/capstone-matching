<html>
<head>
  <title>Admin Landing Page</title>
</head>
<body>
  <%= render 'shared/notification' %>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-danger custom-maroon-button m-3", id: "logout-button" %>
    <button class="btn btn-danger custom-maroon-button m-3" id="dark-mode-toggle">Toggle Dark Mode</button>
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div class="d-flex justify-content-center align-items-center">
      <h1>Welcome, Admin!</h1>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Professors/Admins", manageprof_path, class: "btn btn-danger custom-maroon-button m-4", id: "button-1" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Students", managestudents_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-1" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Projects", projects_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-2" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "View Class Results", adminlanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Score Weights", changeweights_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Courses", adminlanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Submit Project Preferences", adminlanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "View Professor Project Preferences", adminlanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Configuration", lock_unlock_form_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Manage Database", adminlanding_path, class: "btn btn-danger custom-maroon-button mb-4", id: "button-3" %>
    </div>
  </div>
</body>