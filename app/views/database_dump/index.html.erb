<html>
<head>
  <title>Admin Landing Page</title>
</head>
<body>
  <%= render 'shared/notification' %>
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to "Log Out", logout_path, method: :delete, class: "btn btn-danger custom-maroon-button m-3", id: "logout-button" %>
    <button class="btn btn-danger custom-maroon-button m-3" id="dark-mode-toggle">Toggle Dark Mode</button>
  </div>
  <div class="d-flex justify-content-center align-items-center flex-column">
    <div class="d-flex justify-content-center align-items-center">
      <h1>Welcome, Admin!</h1>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= button_to "Export Database", dump_database_path, method: :post, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
    <div class="d-flex justify-content-center align-items-center">
      <%= link_to "Import Database", import_database_path, method: :get, class: "btn btn-danger custom-maroon-button custom-button mb-4", id: "button-3" %>
    </div>
  </div>
</body>