    .container {
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 20px;
      text-align: center;
      max-width: 400px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /*h1, h2 {*/
    /*  color: #333;*/
    /*}*/

    /*p {*/
    /*  color: #555;*/
