<body>
	<div class="container">
		<%= render 'shared/admin_page_header' %>
		<%= render 'shared/notification' %>
	</div>

	<div class="container">
		<h1 class="text-center my-4">Courses</h1>

		<div class="row justify-content-center">
			<div class="col-md-10">
				<div class="card">
					<div class="card-header">Filter by Semester</div>
					<div class="card-body">
						<%= form_tag(manageCourses_path, method: :get, class: 'form-inline') do %>
							<div class="form-group mb-2 mr-2">
								<%= select_tag :semester, options_for_select(@course, @selected_semester), include_blank: "All Semesters", class: 'form-control', id: 'Semester' %>
							</div>
							<%= submit_tag "Filter", class: 'btn btn-primary mb-2' %>
						<% end %>	
					</div>
				</div>
			</div>
		</div>

		<div class="container table-responsive">
			<%= form_with(url: edit_courses_path, method: "post", id: "change-courses-form") do |form| %>
				<table class="table table-bordered">
					<thead class="thead-dark">
						<tr>
							<th>Semester</th>
							<th>Course Number</th>
							<th>Section</th>
							<th>Assign Professor</th>
							<th>Email</th>
							<th>Change Assign Professor</th>

						</tr>
					</thead>
					<tbody>
						<% @courses.each do |c| %>
							<tr>
								<td><%= c.semester %></td>
								<td><%= c.course_number %></td>
								<td><%= c.section %></td>
								<td><%= c.professor&.user&.first_name %> <%= c.professor&.user&.last_name %></td>
								<td><%= c.professor&.user&.email %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			<% end %>
		</div>

	</div>
</body>