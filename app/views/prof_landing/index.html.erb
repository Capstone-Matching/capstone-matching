<html>
  <head>
    <title>Professor Landing Page</title>
    <style>
      /* Light Mode Styles */
      body,
      html {
        margin: 0;
        padding: 0;
        overflow: hidden;
      }
      body {
        background-color: #fff;
        color: #333;
      }
      .form-control {
        background-color: #f8f9fa; /* Light gray for input fields */
        color: #333;
      }
      .btn.btn-danger.custom-maroon-button {
        background-color: maroon;
        border-color: maroon;
        color: #fff;
      }
      a,
      label {
        color: #007bff; /* Blue for links and labels in light mode */
      }

      /* Dark Mode Styles */
      html.dark-mode body {
        background-color: #333;
        color: #fff;
      }
      html.dark-mode .form-control {
        background-color: #444;
        color: #fff;
      }
      html.dark-mode .btn.btn-danger.custom-maroon-button {
        background-color: maroon;
        border-color: maroon;
        color: #fff;
      }
      html.dark-mode a,
      html.dark-mode label {
        color: #bbb; /* Lighter color for links and labels in dark mode */
      }

      .vertical-center-container {
        display: flex;
        flex-direction: column;
        align-items: center; /* Center horizontally */
        justify-content: center; /* Center vertically */
        height: 100vh; /* Make the container full height of the viewport */
        overflow: hidden; /* Hide overflow content */
      }

      .vertical-center-container a {
        margin-right: 0;
        margin-bottom: 10px;
      }

      .btn-equal-size {
        width: 150px;
        height: 40px;
        margin-bottom: 10px;
      }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>
  <body>
    <div class="container mt-3">
      <div class="d-flex justify-content-between align-items-center">
        <button class="btn btn-danger custom-maroon-button" id="dark-mode-toggle">Toggle Dark Mode</button>
        <%= button_to "Logout", destroy_user_session_path, { class: "btn btn-danger custom-maroon-button", data: { turbo: "false" }, method: :delete } %>
      </div>
    </div>
    <div class="buttons">
      <div class="vertical-center-container">
        <h1>Welcome, Professor!</h1>
        <hr>
        <a href="#" class="btn btn-danger btn-equal-size custom-maroon-button mb-2">View Results</a>
        <!-- <a href="#" class="btn btn-danger btn-equal-size custom-maroon-button mb-2">Add Projects</a> -->
        <%= link_to "Add Projects", addProjects_path, class: "btn btn-danger btn-equal-size custom-maroon-button mb-2"%>
        <%= link_to "View Projects", projects_path, class: "btn btn-danger btn-equal-size custom-maroon-button mb-2"%>
        <a href="#" class="btn btn-danger btn-equal-size custom-maroon-button mb-2">Remove Projects</a>
        <%= link_to "Add Section", new_section_path, class: "btn btn-danger btn-equal-size custom-maroon-button mb-2"%>
        <a href="#" class="btn btn-danger btn-equal-size custom-maroon-button mb-2">Add section</a>
    </div>
      </div>
    </div>
    <script>
      // JavaScript to toggle dark mode
      const darkModeToggle = document.getElementById("dark-mode-toggle");
      const htmlElement = document.documentElement;

      darkModeToggle.addEventListener("click", () => {
        htmlElement.classList.toggle("dark-mode");
      });
    </script>
  </body>
</html>

