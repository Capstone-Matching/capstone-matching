<html>
<head>
  <title>Professor Registration</title>
  <style>
    /* Light Mode Styles */
    body {
      background-color: #fff;
      color: #333;
    }
    .form-control {
      background-color: #f8f9fa; /* Light gray for input fields */
      color: #333;
    }
    .btn.btn-danger.custom-maroon-button {
      background-color: maroon;
      border-color: maroon;
      color: #fff;
    }
    a, label {
      color: #007bff; /* Blue for links and labels in light mode */
    }

    /* Dark Mode Styles */
    html.dark-mode body {
      background-color: #333;
      color: #fff;
    }
    html.dark-mode .form-control {
      background-color: #444;
      color: #fff;
    }
    html.dark-mode .btn.btn-danger.custom-maroon-button {
      background-color: maroon;
      border-color: maroon;
      color: #fff;
    }
    html.dark-mode a, html.dark-mode label {
      color: #bbb; /* Lighter color for links and labels in dark mode */
    }
  </style>
</head>
<body>
  <div class="d-flex justify-content-end">
    <button class="btn btn-danger custom-maroon-button" id="dark-mode-toggle">Toggle Dark Mode</button>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h1 class="text-center mb-4">Professor Registration</h1>
        <!-- Registration Form -->
        <form>
          <div class="form-group">
            <label for="email">TAMU Email Address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter your TAMU email address">
          </div>
          <div class="form-group">
            <label for="first-name">First Name</label>
            <input type="text" class="form-control" id="first-name" placeholder="Enter your first name">
          </div>
          <div class="form-group">
            <label for="last-name">Last Name</label>
            <input type="text" class="form-control" id="last-name" placeholder="Enter your last name">
          </div>
          <div class="text-center mt-4">
            <button type="submit" class="btn btn-danger custom-maroon-button">Register</button>
          </div>          
        </form>
        <hr>
      </div>
    </div>
  </div>
 <script>
    // JavaScript to toggle dark mode
    const darkModeToggle = document.getElementById('dark-mode-toggle');
    const htmlElement = document.documentElement;

    darkModeToggle.addEventListener('click', () => {
      htmlElement.classList.toggle('dark-mode');
    });
  </script> 
</body>
</html>


