<html>
  <head>
    <title>Professor Landing Page</title>
    <style>
      /* Your existing CSS styles */

      /* Additional CSS styles for the 'Add Section' form */
      .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;
      }

      .form-container h1 {
        margin-bottom: 20px;
      }

      .form-container .field {
        margin-bottom: 10px;
      }

      .form-container .actions {
        text-align: center;
        margin-top: 20px;
      }

      /* JavaScript for toggling dark mode */

      // JavaScript to toggle dark mode
      const darkModeToggle = document.getElementById("dark-mode-toggle");
      const htmlElement = document.documentElement;

      darkModeToggle.addEventListener("click", () => {
        htmlElement.classList.toggle("dark-mode");
      });
    </style>
  </head>
  <body>
    <div class="d-flex justify-content-between align-items-center">
      <button
        href="#"
        class="btn btn-danger custom-maroon-button ml-3"
        id="back-button"
      >
        Log Out
      </button>
      <!-- <h1>Welcome, Professor!</h1> -->
      <button class="btn btn-danger custom-maroon-button" id="dark-mode-toggle">
        Toggle Dark Mode
      </button>
    </div>
    <div class="buttons">
      <div class="vertical-center-container">
        
  <div class="form-container">
    <h1>Welcome, Professor!</h1>
  <hr>

    <h2>Add a New Section</h2>
    <%= form_with(model: @section, local: true) do |form| %>
      <div class="field">
        <%= form.label :name, 'Section Name' %>
        <%= form.text_field :name, placeholder: 'Enter Section Name' %>
      </div>

      <div class="actions">
        <%= form.submit 'Add Section', class: "btn btn-danger custom-maroon-button" %>
      </div>
    <% end %>
  </div>
      </div>
    </div>
  </body>
</html>
