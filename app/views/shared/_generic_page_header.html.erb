<div class="d-flex justify-content-between align-items-center">
  <% if session[:user_id].present? %>
    <% user = User.find(session[:user_id]) %>
    <% if user&.role == 'admin' %>
      <%= link_to "Back to Admin Home Page", adminlanding_path, class: "btn btn-danger custom-maroon-button m-3", id: "back-button" %>
    <% elsif user&.role == 'professor' %>
      <%= link_to "Back to Professor Home Page", profLanding_path, class: "btn btn-danger custom-maroon-button m-3", id: "back-button" %>
    <% else %>
      <%= link_to "Back", root_path, class: "btn btn-danger custom-maroon-button m-3", id: "back-button" %>
    <% end %>
  <% else %>
    <%= link_to "Back", root_path, class: "btn btn-danger custom-maroon-button m-3", id: "back-button" %>
  <% end %>
  <button class="btn btn-danger custom-maroon-button m-3" id="dark-mode-toggle">Toggle Dark Mode</button>
</div>

