<!-- app/views/shared/_notification.html.erb -->
<% if flash[:notice].present?%>
<div id="notification" class="alert alert-success fixed-top w-50 mx-auto text-center" style="width: 50%;">
  <%= flash[:notice] %>
  <%= a = flash.clear; a = '' %>
</div>

<script>
    //Automatically hide the notification after 3 seconds
    setTimeout(function() {
        $("#notification").fadeOut("slow");
    }, 2000);
</script>
<% end %>

<% if flash[:error].present?%>
  <div id="notification_error" class="alert alert-danger fixed-top w-50 mx-auto text-center" style="width: 50%;">
    <%= flash[:error] %>
    <%= a = flash.clear; a = '' %>
  </div>

  <script>
      //Automatically hide the notification after 3 seconds
      setTimeout(function() {
          $("#notification_error").fadeOut("slow");
      }, 2000);
  </script>
<% end %>

