<!-- app/views/sponsor_preferences/edit.html.erb -->

<div class="container">
  <h1 class="text-center my-4">Edit Sponsor Preference</h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= render 'shared/notification' %>

      <%= form_for [@project, @sponsor_preference] do |f| %>
        <div class="form-group">
          <%= f.label :preference_type %>
          <%= f.text_field :preference_type, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :preference_val %>
          <%= f.text_field :preference_val, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :bonus_amount %>
          <%= f.text_field :bonus_amount, class: 'form-control' %>
        </div>

        <div class="form-actions text-center mb-4">
          <br/>
          <%= f.submit "Update", class: 'btn btn-primary' %>
          <%= link_to "Back", edit_project_path(@project), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
